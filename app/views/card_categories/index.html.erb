      <th class="col-xs-3">Category Name</th>
      <th class="col-xs-9">Description</th>
      <th class="col-xs-1"></th>
      <th class="col-xs-1"></th>
    </tr>
  </thead>
  <%= render @card_categories %>
</table>

<%= will_paginate %>