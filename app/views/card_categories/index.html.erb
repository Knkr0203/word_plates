<% provide(:title, 'All card categories') %>

<h1>Card categories</h1>
<div class="btn_back">
  <%= link_to "Back", root_path, class: "btn btn-lg btn-primary" %>
</div>
<div class="btn_create">
  <%= link_to "Add category", new_card_category_path, class: "btn btn-lg btn-primary" %>
</div>

<%= will_paginate %>

